@model List<CarBook.Dto.AuthorDtos.GetAuthorByBlogIdDto>
@foreach (var item in Model)
{
    <div class="about-author d-flex p-4 bg-light">
        <div class="bio mr-5">
            <img src="~/carbook-master/images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
        </div>
        <div class="desc">
            <h3>@item.AuthorName</h3>
            <p>@item.AuthorDescription</p>
        </div>
    </div>
}